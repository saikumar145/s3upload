<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Files</title>
    <style>
        body {
            display: grid;
            place-items: center;
        }
        .image-container {
            width: 50vw;
            height: 50vh;
        }

        .image {
            width: 100%;
            height: 100%;
        }
    </style>
</head>

<body>
    <% files.forEach(function(file) { %>
        <div class="image-container">
            <img src="<%= file %>" class="image">
        </div>
        <% }); %>

</body>

</html>